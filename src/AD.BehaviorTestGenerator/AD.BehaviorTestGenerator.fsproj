<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <WarnOn>3390;$(WarnOn)</WarnOn>
    <PackageId>AndreasDorfer.BehaviorTestGenerator</PackageId>
    <Version>0.1.3</Version>
    <Authors>Andreas Dorfer</Authors>
    <Description>A Myriad plugin to create test classes from behaviors.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/Andreas-Dorfer/behavior-test-generator</RepositoryUrl>
    <PackageTags>F#, BDD, testing, Myriad, MSTest, FsCheck</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="build\AndreasDorfer.BehaviorTestGenerator.InTest.props" />
    <None Include="build\AndreasDorfer.BehaviorTestGenerator.props">
      <Pack>true</Pack>
      <PackagePath>build</PackagePath>
      <Visible>true</Visible>
    </None>
    <None Include="myriad.toml">
      <Pack>true</Pack>
      <PackagePath>tools</PackagePath>
      <Visible>true</Visible>
    </None>
    <Compile Include="Behavior.fs" />
    <Compile Include="Test.fs" />
    <Compile Include="Generator.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Myriad.Core" Version="0.5.3" PrivateAssets="all" />
    <PackageReference Include="Myriad.Sdk" Version="0.5.3" PrivateAssets="none" />
    <PackageReference Update="NETStandard.Library" PrivateAssets="all" />
    <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="tools" Visible="false" />
  </ItemGroup>

</Project>
